<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardView"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profilFoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:src="@drawable/makarna"
                android:scaleType="centerCrop"
                app:riv_corner_radius_top_left="16dp"
                app:riv_corner_radius_top_right="16dp"
                app:riv_corner_radius_bottom_left="16dp"
                app:riv_corner_radius_bottom_right="16dp"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darkgrey"
            android:layout_marginLeft="5dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yazarYil"
                android:textColor="@color/beyaz"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="22dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_share_24dp"
                android:id="@+id/imgFace"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/yazarYil"
                android:layout_alignEnd="@+id/yazarYil" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_markunread_24dp"
                android:id="@+id/imgSocial"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/imgFace"
                android:layout_toStartOf="@+id/imgFace"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/beyaz"
                android:id="@+id/yazarAdi"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgSocial"
                android:layout_toStartOf="@+id/imgSocial" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
