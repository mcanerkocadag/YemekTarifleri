<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yazarAdi"
        android:layout_above="@+id/yazarTarifSayisi"
        android:layout_alignLeft="@+id/yazarTarifSayisi"
        android:layout_alignStart="@+id/yazarTarifSayisi"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yazarTarifSayisi"


        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/yazarFotosu"
        android:layout_alignStart="@+id/yazarFotosu" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/yazarFotosu"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/yazarAdi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp" />

</RelativeLayout>
